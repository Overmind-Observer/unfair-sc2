bool lib1A704C64_gt_BattleHungerModStart_Func (bool testConds, bool runActions) {
    // Variable Declarations
    playergroup lv_players;
    text lv_defaultDescription;

    // Automatic Variable Declarations
    playergroup auto1E79CEB3_g;
    int auto1E79CEB3_var;

    // Variable Initialization
    lv_players = PlayerGroupEmpty();
    lv_defaultDescription = StringExternal("Param/Value/lib_1A704C64_278A2556");

    // Actions
    if (!runActions) {
        return true;
    }

    if ((GameAttributeGameValue("48") == "0001")) {
        auto1E79CEB3_g = PlayerGroupAll();
        auto1E79CEB3_var = -1;
        while (true) {
            auto1E79CEB3_var = PlayerGroupNextPlayer(auto1E79CEB3_g, auto1E79CEB3_var);
            if (auto1E79CEB3_var < 0) { break; }
            if ((GameAttributePlayerValue("49", auto1E79CEB3_var) == "0001")) {
                PlayerGroupAdd(lv_players, auto1E79CEB3_var);
            }

        }
        if ((PlayerGroupCount(lv_players) > 0)) {
            TextExpressionSetToken("Param/Expression/lib_1A704C64_CFFB82CC", "A", libDBC4E2D2_gf_GetPlayerNamesColored(lv_players));
            HelpPanelAddTip(PlayerGroupAll(), libNtve_gf_FormatTipTitle(StringExternal("Param/Value/lib_1A704C64_6AE20476"), libNtve_ge_TipType_NormalTip), (lv_defaultDescription + TextExpressionAssemble("Param/Expression/lib_1A704C64_CFFB82CC")), StringExternal("Param/Value/lib_1A704C64_B3917A4E"), "Assets\\Textures\\btn-ability-terran-stimpack-color.dds");
        }
        else {
            TriggerEnable(lib1A704C64_gt_UnitIsKilled, false);
        }
    }
    else {
        TriggerEnable(lib1A704C64_gt_UnitIsKilled, false);
    }
    return true;
}

