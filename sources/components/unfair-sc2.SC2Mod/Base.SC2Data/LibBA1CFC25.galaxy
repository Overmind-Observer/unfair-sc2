// Triggers
//--------------------------------------------------------------------------------------------------
// Trigger: Reduce Mining Mod Start
//--------------------------------------------------------------------------------------------------
bool libBA1CFC25_gt_ReduceMiningModStart_Func (bool testConds, bool runActions) {
    // Variable Declarations
    playergroup lv_players;

    // Automatic Variable Declarations
    playergroup auto160B0511_g;
    int auto160B0511_var;

    // Variable Initialization
    lv_players = PlayerGroupEmpty();

    // Actions
    if (!runActions) {
        return true;
    }

    if ((GameAttributeGameValue("27") == "0001")) {
        auto160B0511_g = PlayerGroupAll();
        auto160B0511_var = -1;
        while (true) {
            auto160B0511_var = PlayerGroupNextPlayer(auto160B0511_g, auto160B0511_var);
            if (auto160B0511_var < 0) { break; }
            if ((GameAttributePlayerValue("28", auto160B0511_var) == "0001")) {
                PlayerGroupAdd(lv_players, auto160B0511_var);
            }

        }
        if ((PlayerGroupCount(lv_players) > 0)) {
            TextExpressionSetToken("Param/Expression/lib_BA1CFC25_D22176AE", "Players", libDBC4E2D2_gf_GetPlayerNamesColored(lv_players));
            HelpPanelAddTip(PlayerGroupAll(), libNtve_gf_FormatTipTitle(StringExternal("Param/Value/lib_BA1CFC25_74F443A0"), libNtve_ge_TipType_NormalTip), TextExpressionAssemble("Param/Expression/lib_BA1CFC25_D22176AE"), StringExternal("Param/Value/lib_BA1CFC25_68A5B7A0"), "Assets\\Textures\\economiccrisis_coop.dds");
        }
        else {
            TriggerEnable(libBA1CFC25_gt_Mineralsgathered, false);
            TriggerEnable(libBA1CFC25_gt_Vespenegathered, false);
        }
    }
    else {
        TriggerEnable(libBA1CFC25_gt_Mineralsgathered, false);
        TriggerEnable(libBA1CFC25_gt_Vespenegathered, false);
    }
    return true;
}

//--------------------------------------------------------------------------------------------------
void libBA1CFC25_gt_ReduceMiningModStart_Init () {
    libBA1CFC25_gt_ReduceMiningModStart = TriggerCreate("libBA1CFC25_gt_ReduceMiningModStart_Func");
    TriggerAddEventMapInit(libBA1CFC25_gt_ReduceMiningModStart);
}

//--------------------------------------------------------------------------------------------------
// Trigger: Minerals gathered
//--------------------------------------------------------------------------------------------------
bool libBA1CFC25_gt_Mineralsgathered_Func (bool testConds, bool runActions) {
    // Automatic Variable Declarations
    // Conditions
    if (testConds) {
        if (!((GameAttributePlayerValue("28", UnitGetOwner(EventUnit())) == "0001"))) {
            return false;
        }
    }

    // Actions
    if (!runActions) {
        return true;
    }

    libDBC4E2D2_gf_ShowResourcesBaloonForUnit(EventUnit(), -1, true);
    PlayerModifyPropertyInt(UnitGetOwner(EventUnit()), c_playerPropMinerals, c_playerPropOperSubtract, 1);
    return true;
}

//--------------------------------------------------------------------------------------------------
void libBA1CFC25_gt_Mineralsgathered_Init () {
    libBA1CFC25_gt_Mineralsgathered = TriggerCreate("libBA1CFC25_gt_Mineralsgathered_Func");
    TriggerAddEventUnitBehaviorChange(libBA1CFC25_gt_Mineralsgathered, null, "CarryMineralFieldMinerals", c_unitBehaviorChangeDeactivate);
    TriggerAddEventUnitBehaviorChange(libBA1CFC25_gt_Mineralsgathered, null, "CarryHighYieldMineralFieldMinerals", c_unitBehaviorChangeDeactivate);
}

